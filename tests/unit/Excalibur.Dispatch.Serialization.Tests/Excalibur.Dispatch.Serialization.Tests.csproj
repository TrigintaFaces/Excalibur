    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <RootNamespace>Excalibur.Dispatch.Serialization.Tests</RootNamespace>
    <AssemblyName>Excalibur.Dispatch.Serialization.Tests</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <!-- Test framework (Microsoft.NET.Test.Sdk, xunit, xunit.runner.visualstudio) provided by Directory.Build.props -->
