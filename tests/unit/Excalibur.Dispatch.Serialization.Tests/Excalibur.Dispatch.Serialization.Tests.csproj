    <PackageReference Include="MemoryPack" />
    <PackageReference Include="MessagePack" />
    <PackageReference Include="Google.Protobuf" />
  </ItemGroup>

  <ItemGroup>
    <!-- ProjectReferences from all merged serialization test projects -->
