    <ProjectReference Include="..\..\..\src\Dispatch\Excalibur.Dispatch.Serialization.MessagePack\Excalibur.Dispatch.Serialization.MessagePack.csproj" />
    <ProjectReference Include="..\..\..\src\Dispatch\Excalibur.Dispatch.Serialization.Protobuf\Excalibur.Dispatch.Serialization.Protobuf.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\\..\\Shared\\Tests.Shared\Tests.Shared.csproj" />
  </ItemGroup>

</Project>
