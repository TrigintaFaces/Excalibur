{
  "ConnectionStrings": {
    "CdcSource": "Server=localhost,1433;Database=LegacyDb;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True",
    "EventStore": "Server=localhost,1434;Database=EventStore;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True"
  },
  "Elasticsearch": {
    "Uri": "http://localhost:9200"
  },
  "Jobs": {
    "UseQuartzScheduler": false,
    "CdcSampleJob": {
      "Enabled": true,
      "JobName": "CdcSampleJob",
      "JobGroup": "CDC",
      "CronSchedule": "0/5 * * * * ?",
      "CaptureInstances": [
        "dbo_LegacyCustomers",
        "dbo_LegacyOrders",
        "dbo_LegacyOrderItems"
      ],
      "BatchSize": 100
    }
  },
  "CdcPolling": {
    "PollingInterval": "00:00:05",
    "BatchSize": 100,
    "StartImmediately": true,
    "InitialDelay": "00:00:02"
  },
  "Projections": {
    "PollingInterval": "00:00:01",
    "BatchSize": 100,
    "RebuildOnStartup": false
  },
  "Api": {
    "Port": 5000,
    "EnableSwagger": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Elastic": "Warning",
      "CdcEventStoreElasticsearch.Infrastructure": "Debug",
      "CdcEventStoreElasticsearch.AntiCorruption": "Debug",
      "CdcEventStoreElasticsearch.Projections": "Debug"
    }
  }
}
