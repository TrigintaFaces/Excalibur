<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Copyright>$(Copyright)</Copyright>
    <Company>$(Company)</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IsPackable>true</IsPackable>
    <Version>$(VersionPrefix)</Version>
    <PackageId>$(AssemblyName)</PackageId>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Authors>$(Authors)</Authors>
    <Product>$(Product)</Product>
    <Description>WebHost - Part of the Excalibur messaging framework</Description>
    <PackageTags>excalibur;dispatch;messaging;aot</PackageTags>
    <PackageProjectUrl>https://github.com/TrigintaFaces/Excalibur</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TrigintaFaces/Excalibur</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>See CHANGELOG.md for release notes</PackageReleaseNotes>
    <IsAotCompatible>true</IsAotCompatible>
  </PropertyGroup>
  <!-- Sprint 428 S428.3: Updated paths for reorganized sample structure -->
  <ItemGroup>
    <ProjectReference Include="$(DispatchSourceRoot)Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
    <ProjectReference Include="$(DispatchSourceRoot)Excalibur.Dispatch.Transport.RabbitMQ\Excalibur.Dispatch.Transport.RabbitMQ.csproj" />
    <ProjectReference Include="$(ExcaliburSourceRoot)Excalibur.Data.InMemory\Excalibur.Data.InMemory.csproj" />
    <ProjectReference Include="$(ExcaliburSourceRoot)Excalibur.Outbox\Excalibur.Outbox.csproj" />
    <ProjectReference Include="$(ExcaliburSourceRoot)Excalibur.Hosting.Web\Excalibur.Hosting.Web.csproj" />
    <ProjectReference Include="../Contracts/WebWorkerSample.Contracts.csproj" />
    <PackageReference Include="RabbitMQ.Client" />
  </ItemGroup>
</Project>
