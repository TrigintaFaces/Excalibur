<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>LeaderElection</RootNamespace>
  </PropertyGroup>

  <!-- Dispatch Leader Election Abstractions -->
  <ItemGroup>
    <ProjectReference Include="$(DispatchSourceRoot)Excalibur.Dispatch.LeaderElection.Abstractions\Excalibur.Dispatch.LeaderElection.Abstractions.csproj" />
  </ItemGroup>

  <!-- Excalibur Leader Election with Redis provider -->
  <ItemGroup>
    <ProjectReference Include="$(ExcaliburSourceRoot)Excalibur.LeaderElection\Excalibur.LeaderElection.csproj" />
    <ProjectReference Include="$(ExcaliburSourceRoot)Excalibur.LeaderElection.Redis\Excalibur.LeaderElection.Redis.csproj" />
  </ItemGroup>

  <!-- Redis client -->
  <ItemGroup>
    <PackageReference Include="StackExchange.Redis" />
  </ItemGroup>

  <!-- Logging and configuration -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" />
  </ItemGroup>

  <!-- Content files -->
  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="docker-compose.yml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
