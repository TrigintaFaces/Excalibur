<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
		<CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)GeneratedFiles</CompilerGeneratedFilesOutputPath>
		<Copyright>$(Copyright)</Copyright>
		<Company>$(Company)</Company>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<IsPackable>false</IsPackable>
		<Version>$(VersionPrefix)</Version>
		<PackageId>$(AssemblyName)</PackageId>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Authors>$(Authors)</Authors>
		<Product>$(Product)</Product>
		<Description>CDC Anti-Corruption Layer Example - Demonstrates translating CDC events to domain commands</Description>
		<PackageTags>excalibur;dispatch;cdc;anti-corruption;ddd</PackageTags>
		<PackageProjectUrl>https://github.com/TrigintaFaces/Excalibur</PackageProjectUrl>
		<RepositoryUrl>https://github.com/TrigintaFaces/Excalibur</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageReleaseNotes>See CHANGELOG.md for release notes</PackageReleaseNotes>
		<!-- Suppress warnings irrelevant for sample code -->
		<NoWarn>$(NoWarn);CA1050</NoWarn>
	</PropertyGroup>
	<!-- Sprint 428 S428.3: Updated paths for reorganized sample structure -->
	<ItemGroup>
		<ProjectReference Include="$(DispatchSourceRoot)Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
		<ProjectReference Include="$(DispatchSourceRoot)Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
		<ProjectReference Include="$(ExcaliburSourceRoot)Excalibur.Data.SqlServer\Excalibur.Data.SqlServer.csproj" />
		<PackageReference Include="Microsoft.Extensions.Hosting" />
		<PackageReference Include="Microsoft.Extensions.Logging.Console" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="$(DispatchSourceRoot)Excalibur.Dispatch.SourceGenerators\Excalibur.Dispatch.SourceGenerators.csproj" ReferenceOutputAssembly="false" OutputItemType="Analyzer" />
	</ItemGroup>
</Project>
