{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "RetryAndCircuitBreaker": "Debug",
      "Excalibur.Dispatch.Resilience.Polly": "Debug"
    }
  },
  "Resilience": {
    "Timeouts": {
      "DefaultTimeout": "00:00:05",
      "OperationTimeouts": {
        "payment": "00:00:10",
        "inventory": "00:00:03",
        "notification": "00:00:02"
      }
    },
    "GracefulDegradation": {
      "EnableGracefulDegradation": true,
      "DegradationThreshold": 0.8,
      "RecoveryThreshold": 0.5
    }
  }
}
