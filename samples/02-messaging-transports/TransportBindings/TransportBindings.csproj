<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<Copyright>$(Copyright)</Copyright>
		<Company>$(Company)</Company>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<IsPackable>true</IsPackable>
		<Version>$(VersionPrefix)</Version>
		<PackageId>$(AssemblyName)</PackageId>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Authors>$(Authors)</Authors>
		<Product>$(Product)</Product>
		<Description>TransportBindings - Part of the Excalibur messaging framework</Description>
		<PackageTags>excalibur;dispatch;messaging;aot</PackageTags>
		<PackageProjectUrl>https://github.com/TrigintaFaces/Excalibur</PackageProjectUrl>
		<RepositoryUrl>https://github.com/TrigintaFaces/Excalibur</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageReleaseNotes>See CHANGELOG.md for release notes</PackageReleaseNotes>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Hosting" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" />
	</ItemGroup>
	<!-- Sprint 428 S428.3: Updated paths for reorganized sample structure -->
	<ItemGroup>
		<ProjectReference Include="$(DispatchSourceRoot)Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
		<ProjectReference Include="$(DispatchSourceRoot)Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
	</ItemGroup>
</Project>