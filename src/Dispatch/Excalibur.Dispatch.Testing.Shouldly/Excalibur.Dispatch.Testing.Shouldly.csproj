<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<IsPackable>true</IsPackable>
		<PackageId>Excalibur.Dispatch.Testing.Shouldly</PackageId>
		<Description>Shouldly assertion extensions for the Excalibur Dispatch testing utilities. Provides fluent assertions for DispatchTestHarness message logs, InMemoryTransportSender, InMemoryTransportReceiver, and InMemoryTransportSubscriber.</Description>
		<PackageTags>excalibur;dispatch;testing;shouldly;assertions;test-doubles;messaging</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<IsAotCompatible>true</IsAotCompatible>
		<EnableTrimAnalyzer>true</EnableTrimAnalyzer>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Shouldly" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Excalibur.Dispatch.Testing\Excalibur.Dispatch.Testing.csproj" />
	</ItemGroup>
</Project>
