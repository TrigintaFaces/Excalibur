<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<RootNamespace>Excalibur.Dispatch.Security.Aws</RootNamespace>
		<AssemblyName>Excalibur.Dispatch.Security.Aws</AssemblyName>
		<IsPackable>true</IsPackable>
		<IsAotCompatible>true</IsAotCompatible>
		<!-- NuGet Package Metadata -->
		<PackageId>Excalibur.Dispatch.Security.Aws</PackageId>
		<Description>AWS security integrations for Dispatch messaging including AWS Secrets Manager credential management</Description>
		<PackageTags>Dispatch;Security;AWS;SecretsManager;Credentials</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>
	<!-- Include README.md in NuGet package -->
	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="/" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\Excalibur.Dispatch.Security\Excalibur.Dispatch.Security.csproj" />
	</ItemGroup>
	<ItemGroup>
		<!-- AWS SDK packages for Secrets Manager -->
		<PackageReference Include="AWSSDK.SecretsManager" />
		<!-- Logging -->
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Options" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
	</ItemGroup>
	<ItemGroup>
		<InternalsVisibleTo Include="Excalibur.Dispatch.Security.Aws.Tests" />
		<InternalsVisibleTo Include="Excalibur.Dispatch.Security.Tests" />
		<InternalsVisibleTo Include="DynamicProxyGenAssembly2" PublicKey="" />
	</ItemGroup>
</Project>
