<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AssemblyName>Excalibur.Dispatch.Transport.AwsSqs</AssemblyName>
    <RootNamespace>Excalibur.Dispatch.Transport.AwsSqs</RootNamespace>
    <PackageId>Excalibur.Dispatch.Transport.AwsSqs</PackageId>
    <Description>AWS integration for the Excalibur framework. Provides SQS, SNS, and EventBridge implementations with CloudEvents support.</Description>
    <PackageTags>messaging;dispatch;aws;sqs;sns;eventbridge;cloud;aot</PackageTags>
  </PropertyGroup>
  <!-- AOT Configuration -->
  <PropertyGroup>
    <IsAotCompatible>true</IsAotCompatible>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableAotAnalyzer>true</EnableAotAnalyzer>
    <EnableSingleFileAnalyzer>true</EnableSingleFileAnalyzer>
    <PublishAot Condition="'$(PublishAot)' == ''">false</PublishAot>
    <TrimMode>partial</TrimMode>
    <IlcOptimizationPreference>Speed</IlcOptimizationPreference>
    <IlcGenerateStackTraceData>false</IlcGenerateStackTraceData>
    <InvariantGlobalization>false</InvariantGlobalization>
  </PropertyGroup>
  <PropertyGroup>
    <DefineConstants>$(DefineConstants);USE_SOURCE_GENERATION;AOT_ENABLED</DefineConstants>
    <SuppressTrimAnalysisWarnings>false</SuppressTrimAnalysisWarnings>
    <TrimmerDefaultAction>link</TrimmerDefaultAction>
    <TrimMode>partial</TrimMode>
  </PropertyGroup>
  <!-- Feature flags for conditional compilation -->
  <PropertyGroup>
    <!-- Define feature flags - can be overridden by setting environment variables or MSBuild properties -->
    <EnableAwsAdvancedFeatures Condition="'$(EnableAwsAdvancedFeatures)' == ''">true</EnableAwsAdvancedFeatures>
    <EnableAwsBatchProcessing Condition="'$(EnableAwsBatchProcessing)' == ''">true</EnableAwsBatchProcessing>
    <EnableAwsConnectionPooling Condition="'$(EnableAwsConnectionPooling)' == ''">true</EnableAwsConnectionPooling>
    <EnableAwsSessionManagement Condition="'$(EnableAwsSessionManagement)' == ''">true</EnableAwsSessionManagement>
    <EnableAwsDlqSupport Condition="'$(EnableAwsDlqSupport)' == ''">true</EnableAwsDlqSupport>
    <!-- Set compiler constants based on feature flags -->
    <DefineConstants Condition="'$(EnableAwsAdvancedFeatures)' == 'true'">$(DefineConstants);AWS_ADVANCED_FEATURES</DefineConstants>
    <DefineConstants Condition="'$(EnableAwsBatchProcessing)' == 'true'">$(DefineConstants);AWS_BATCH_PROCESSING</DefineConstants>
    <DefineConstants Condition="'$(EnableAwsConnectionPooling)' == 'true'">$(DefineConstants);AWS_CONNECTION_POOLING</DefineConstants>
    <DefineConstants Condition="'$(EnableAwsSessionManagement)' == 'true'">$(DefineConstants);AWS_SESSION_MANAGEMENT</DefineConstants>
    <DefineConstants Condition="'$(EnableAwsDlqSupport)' == 'true'">$(DefineConstants);AWS_DLQ_SUPPORT</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
    <ProjectReference Include="..\Excalibur.Dispatch.Transport.Abstractions\Excalibur.Dispatch.Transport.Abstractions.csproj" />
    <ProjectReference Include="..\Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
    <ProjectReference Include="..\Excalibur.Dispatch.Resilience.Polly\Excalibur.Dispatch.Resilience.Polly.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- AWS SDK packages -->
    <PackageReference Include="AWSSDK.CloudWatch" />
    <PackageReference Include="AWSSDK.EventBridge" />
    <PackageReference Include="AWSSDK.Scheduler" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" />
    <PackageReference Include="AWSSDK.SQS" />
    <PackageReference Include="AWSSDK.DynamoDBv2" />
    <PackageReference Include="AWSSDK.S3" />
    <!-- Common dependencies -->
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />
    <PackageReference Include="CloudNative.CloudEvents" />
    <PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" />
    <PackageReference Include="System.Text.Json" />
    <!-- Advanced features dependencies (conditionally included) -->
    <PackageReference Include="Polly" />
    <PackageReference Include="StackExchange.Redis" />
  </ItemGroup>
  <ItemGroup>
    <InternalsVisibleTo Include="Excalibur.Dispatch.Transport.AwsSqs.Tests.Unit" />
    <InternalsVisibleTo Include="Excalibur.Dispatch.Transport.AwsSqs.Tests.Integration" />
    <InternalsVisibleTo Include="Excalibur.Dispatch.Transport.AwsSqs.Tests.Functional" />
    <InternalsVisibleTo Include="Excalibur.Dispatch.Transport.AwsSqs.Tests" />
    <InternalsVisibleTo Include="Excalibur.Dispatch.Transport.Tests" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI.Unshipped.txt" />
  </ItemGroup>
</Project>