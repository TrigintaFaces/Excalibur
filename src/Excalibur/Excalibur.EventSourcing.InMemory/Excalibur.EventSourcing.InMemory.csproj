<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<IsPackable>true</IsPackable>
		<PackageId>Excalibur.EventSourcing.InMemory</PackageId>
		<Description>In-memory event store implementation for Excalibur.EventSourcing. Intended for testing and development scenarios.</Description>
		<PackageTags>excalibur;event-sourcing;in-memory;testing;development</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<!-- AOT Configuration -->
	<PropertyGroup>
		<IsAotCompatible>true</IsAotCompatible>
		<EnableTrimAnalyzer>true</EnableTrimAnalyzer>
		<PublishAot Condition="'$(PublishAot)' == ''">false</PublishAot>
	</PropertyGroup>

	<PropertyGroup Condition="'$(PublishAot)' == 'true' OR '$(PublishTrimmed)' == 'true'">
		<SuppressTrimAnalysisWarnings>false</SuppressTrimAnalysisWarnings>
		<TrimmerDefaultAction>link</TrimmerDefaultAction>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Excalibur.EventSourcing\Excalibur.EventSourcing.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="/" />
	</ItemGroup>
</Project>
