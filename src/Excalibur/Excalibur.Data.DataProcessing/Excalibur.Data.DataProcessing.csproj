<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageId>Excalibur.Data.DataProcessing</PackageId>
    <Description>Data processing orchestration and management for the Excalibur framework.</Description>
    <PackageTags>excalibur;data;processing;orchestration;etl</PackageTags>
    <IsAotCompatible>true</IsAotCompatible>
    <DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
  </PropertyGroup>
  <ItemGroup>
    <InternalsVisibleTo Include="Excalibur.Data.Tests" />
    <InternalsVisibleTo Include="Excalibur.Data.DataProcessing.Tests" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Dapper" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />
  </ItemGroup>
  <!-- Excalibur internal references (always ProjectReference) -->
  <ItemGroup>
    <ProjectReference Include="..\Excalibur.Data\Excalibur.Data.csproj" />
  </ItemGroup>
  <!-- Development mode: Dispatch ProjectReferences -->
  <ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>
  <!-- CI mode: PackageReference for Dispatch packages -->
  <ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
    <PackageReference Include="Excalibur.Dispatch.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
    <PackageReference Include="Excalibur.Dispatch" VersionOverride="$(DispatchPackageVersion)" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI.Unshipped.txt" />
  </ItemGroup>
</Project>