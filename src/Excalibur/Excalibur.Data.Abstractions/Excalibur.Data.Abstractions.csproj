<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<RootNamespace>Excalibur.Data.Abstractions</RootNamespace>
		<AssemblyName>Excalibur.Data.Abstractions</AssemblyName>
		<!-- NuGet Package Metadata -->
		<PackageId>Excalibur.Data.Abstractions</PackageId>
		<Description>Core abstractions for Excalibur data persistence layer supporting multiple database providers</Description>
		<PackageTags>excalibur;data;abstractions;persistence;dapper</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<IsAotCompatible>true</IsAotCompatible>
		<DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
	</PropertyGroup>
	<!-- Include README.md in NuGet package -->
	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="/" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Dapper" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Options" />
		<PackageReference Include="System.Diagnostics.DiagnosticSource" />
	</ItemGroup>
	<!-- Excalibur internal references (always ProjectReference) -->
	<ItemGroup>
		<ProjectReference Include="..\Excalibur.Domain\Excalibur.Domain.csproj" />
	</ItemGroup>

	<!-- Development mode: Dispatch ProjectReferences -->
	<ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
		<ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
	</ItemGroup>
	<!-- PublicAPI baseline files for breaking change detection -->
	<ItemGroup>
		<AdditionalFiles Include="PublicAPI.Shipped.txt" />
		<AdditionalFiles Include="PublicAPI.Unshipped.txt" />
	</ItemGroup>

	<!-- CI mode: PackageReference for Dispatch packages -->
	<ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
		<PackageReference Include="Excalibur.Dispatch.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
	</ItemGroup>
</Project>
