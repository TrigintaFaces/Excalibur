<?xml version='1.0' encoding='utf-8'?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <IsPackable>true</IsPackable>

    <PackageId>Excalibur.Hosting.Web</PackageId>
    <Authors>TrigintaFaces</Authors>
    <Description>A project within Excalibur to define the classes and methods related to hosting services for Web.</Description>
    <RepositoryUrl>https://github.com/TrigintaFaces/Excalibur</RepositoryUrl>
    <Copyright>$(Copyright)</Copyright>
    <Company>$(Company)</Company>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Product>$(Product)</Product>
    <PackageTags>excalibur;hosting;web;aspnetcore;aot</PackageTags>
    <PackageProjectUrl>https://github.com/TrigintaFaces/Excalibur</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>See CHANGELOG.md for release notes</PackageReleaseNotes>
    <IsAotCompatible>true</IsAotCompatible>
    <DeterministicSourcePaths>true</DeterministicSourcePaths>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="Diagnostics\OpenApi\problem-details.openapi.yaml" Pack="true" PackagePath="contentFiles\any\any\Diagnostics\OpenApi\" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Asp.Versioning.Mvc" />
    <PackageReference Include="Asp.Versioning.Mvc.ApiExplorer" />
    <PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Excalibur.Hosting\Excalibur.Hosting.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <!-- CI mode: PackageReference for Dispatch packages -->
  <ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
    <PackageReference Include="Excalibur.Dispatch.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
    <PackageReference Include="Excalibur.Dispatch" VersionOverride="$(DispatchPackageVersion)" />
  </ItemGroup>
</Project>
