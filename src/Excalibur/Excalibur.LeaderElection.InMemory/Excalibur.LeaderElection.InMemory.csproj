<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<IsPackable>true</IsPackable>
		<PackageId>Excalibur.LeaderElection.InMemory</PackageId>
		<Description>In-memory leader election implementation for Excalibur framework. Suitable for single-process scenarios, testing, and development.</Description>
		<PackageTags>excalibur;leaderelection;inmemory;testing;development</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<IsAotCompatible>true</IsAotCompatible>
		<EnableTrimAnalyzer>true</EnableTrimAnalyzer>
		<DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(PublishAot)' == 'true' OR '$(PublishTrimmed)' == 'true'">
		<SuppressTrimAnalysisWarnings>false</SuppressTrimAnalysisWarnings>
		<TrimmerDefaultAction>link</TrimmerDefaultAction>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Options" />
	</ItemGroup>

	<ItemGroup><ProjectReference Include="..\Excalibur.LeaderElection\Excalibur.LeaderElection.csproj" /></ItemGroup><ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
		<ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.LeaderElection.Abstractions\Excalibur.Dispatch.LeaderElection.Abstractions.csproj" />
		
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="/" />
	</ItemGroup>

	<!-- CI mode: PackageReference for Dispatch packages -->
	<ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
		<PackageReference Include="Excalibur.Dispatch.LeaderElection.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
	</ItemGroup>
</Project>
