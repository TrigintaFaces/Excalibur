<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <!-- NuGet Package Metadata -->
    <PackageId>Excalibur.A3</PackageId>
    <Description>Authorization, Authentication, and Audit (A3) services for the Excalibur framework.</Description>
    <PackageTags>excalibur;authorization;authentication;audit;security</PackageTags>
    <IsAotCompatible>true</IsAotCompatible>
    <DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
  </PropertyGroup>
  <ItemGroup>
    <InternalsVisibleTo Include="Excalibur.Tests" />
    <InternalsVisibleTo Include="Excalibur.A3.Tests" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Audit\Requests\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Excalibur.Application\Excalibur.Application.csproj" />
    <ProjectReference Include="..\Excalibur.Data\Excalibur.Data.csproj" />
    <ProjectReference Include="..\Excalibur.Data.Abstractions\Excalibur.Data.Abstractions.csproj" />
    <ProjectReference Include="..\Excalibur.Domain\Excalibur.Domain.csproj" />
    <ProjectReference Include="..\Excalibur.EventSourcing\Excalibur.EventSourcing.csproj" />
    <ProjectReference Include="..\Excalibur.Outbox\Excalibur.Outbox.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
  </ItemGroup>
  <!-- CI mode: PackageReference for Dispatch packages -->
  <ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
    <PackageReference Include="Excalibur.Dispatch.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
    <PackageReference Include="Excalibur.Dispatch" VersionOverride="$(DispatchPackageVersion)" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI.Unshipped.txt" />
  </ItemGroup>
</Project>