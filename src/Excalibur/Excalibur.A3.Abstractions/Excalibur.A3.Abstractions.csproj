<?xml version='1.0' encoding='utf-8'?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>    <IsPackable>true</IsPackable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>Abstractions for Excalibur A3 (Authentication, Authorization, Auditing) contracts.</Description>
  <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>dispatch;excalibur;authentication;authorization;access-control</PackageTags>
    <IsAotCompatible>true</IsAotCompatible>
        <DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
  </PropertyGroup>
  <ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
  </ItemGroup>


<ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <!-- CI mode: PackageReference for Dispatch packages -->
  <ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
    <PackageReference Include="Excalibur.Dispatch.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
  </ItemGroup>
</Project>
