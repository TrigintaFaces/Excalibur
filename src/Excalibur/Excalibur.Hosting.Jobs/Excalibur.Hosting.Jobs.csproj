<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageId>Excalibur.Hosting.Jobs</PackageId>
    <Description>Job hosting infrastructure for Excalibur applications with .NET Worker Service and Web hosting support.</Description>
    <PublishAot>true</PublishAot>
    <IsTrimmable>true</IsTrimmable>
    <WarningsNotAsErrors>NU1608</WarningsNotAsErrors>
    <PackageTags>excalibur;hosting;jobs;background;scheduling;aot</PackageTags>
    <IsAotCompatible>true</IsAotCompatible>
    <DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
  </PropertyGroup>
  <ItemGroup>
    <InternalsVisibleTo Include="Excalibur.Tests.Unit" />
    <InternalsVisibleTo Include="Excalibur.Tests.Integration" />
    <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Excalibur.Jobs\Excalibur.Jobs.csproj" />
    <ProjectReference Include="..\Excalibur.Hosting\Excalibur.Hosting.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>
  <!-- CI mode: PackageReference for Dispatch packages -->
  <ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
    <PackageReference Include="Excalibur.Dispatch.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
    <PackageReference Include="Excalibur.Dispatch" VersionOverride="$(DispatchPackageVersion)" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI.Unshipped.txt" />
  </ItemGroup>
</Project>