<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<!-- NuGet package metadata -->
		<PackageId>Excalibur.Application</PackageId>
		<Description>A project within Excalibur to define the classes and methods related to the Application layer within a DDD solution.</Description>
		<PackageTags>excalibur;application;ddd;domain-driven-design;cqrs</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<IsAotCompatible>true</IsAotCompatible>
		<DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
	</PropertyGroup>
	<!-- AOT Configuration -->
	<PropertyGroup>
		<EnableTrimAnalyzer>true</EnableTrimAnalyzer>
		<PublishAot Condition="'$(PublishAot)' == ''">false</PublishAot>
	</PropertyGroup>
	<PropertyGroup Condition="'$(PublishAot)' == 'true' OR '$(PublishTrimmed)' == 'true'">
		<SuppressTrimAnalysisWarnings>false</SuppressTrimAnalysisWarnings>
		<TrimmerDefaultAction>link</TrimmerDefaultAction>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="FluentValidation" />
		<PackageReference Include="FluentValidation.DependencyInjectionExtensions" />
		<PackageReference Include="IdentityModel" />
		<PackageReference Include="Microsoft.Extensions.Caching.Abstractions" />
		<PackageReference Include="System.IdentityModel.Tokens.Jwt" />
	</ItemGroup>
	<!-- Excalibur internal references (always ProjectReference) -->
	<ItemGroup>
		<ProjectReference Include="..\Excalibur.Data\Excalibur.Data.csproj" />
	</ItemGroup>

	<!-- Development mode: Dispatch ProjectReferences -->
	<ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
		<ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
		<ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch\Excalibur.Dispatch.csproj" />
	</ItemGroup>

	<!-- CI mode: PackageReference for Dispatch packages -->
	<ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
		<PackageReference Include="Excalibur.Dispatch.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
		<PackageReference Include="Excalibur.Dispatch" VersionOverride="$(DispatchPackageVersion)" />
	</ItemGroup>
</Project>
