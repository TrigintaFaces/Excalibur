<?xml version='1.0' encoding='utf-8'?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>    <IsPackable>true</IsPackable>
    <PackageId>Excalibur.Data.MongoDB</PackageId>
    <Description>MongoDB database provider implementation for Excalibur data access layer</Description>
    <Authors>The Excalibur Project</Authors>
    <Company>Excalibur</Company>
    <Product>Excalibur.Dispatch</Product>
    <PackageTags>excalibur;data;mongodb;nosql;document;provider</PackageTags>
    <Copyright>$(Copyright)</Copyright>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageProjectUrl>https://github.com/TrigintaFaces/Excalibur</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TrigintaFaces/Excalibur</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>See CHANGELOG.md for release notes</PackageReleaseNotes>
    <IsAotCompatible>true</IsAotCompatible>
    <DeterministicSourcePaths>true</DeterministicSourcePaths>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  <PackageReadmeFile>README.md</PackageReadmeFile>
        <DispatchPackageVersion Condition="'$(DispatchPackageVersion)' == ''">0.1.0-local</DispatchPackageVersion>
  </PropertyGroup>
  <ItemGroup>
    <InternalsVisibleTo Include="Excalibur.Data.MongoDB.Tests" />
    <InternalsVisibleTo Include="Excalibur.Data.Tests" />
    <InternalsVisibleTo Include="MongoDB.Integration.Tests" />
  </ItemGroup>
  <ItemGroup>

    <PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" />
    <PackageReference Include="MongoDB.Driver" />
    <PackageReference Include="AspNetCore.HealthChecks.MongoDb" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" />
    <PackageReference Include="Polly" />
  </ItemGroup>
  <!-- Excalibur internal references (always ProjectReference) -->
  <ItemGroup>
    <ProjectReference Include="..\Excalibur.Cdc\Excalibur.Cdc.csproj" />
    <ProjectReference Include="..\Excalibur.Data.Abstractions\Excalibur.Data.Abstractions.csproj" />
    <ProjectReference Include="..\Excalibur.A3.Abstractions\Excalibur.A3.Abstractions.csproj" />
    <ProjectReference Include="..\Excalibur.Data\Excalibur.Data.csproj" />
    <ProjectReference Include="..\Excalibur.EventSourcing\Excalibur.EventSourcing.csproj" />
  </ItemGroup>

  <!-- Development mode: Dispatch ProjectReferences -->
  <ItemGroup Condition="'$(UsePackageReferences)' != 'true'">
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Abstractions\Excalibur.Dispatch.Abstractions.csproj" />
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.LeaderElection.Abstractions\Excalibur.Dispatch.LeaderElection.Abstractions.csproj" />
    <ProjectReference Include="..\..\Dispatch\Excalibur.Dispatch.Serialization.MemoryPack\Excalibur.Dispatch.Serialization.MemoryPack.csproj" />
  </ItemGroup>
<ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <!-- CI mode: PackageReference for Dispatch packages -->
  <ItemGroup Condition="'$(UsePackageReferences)' == 'true'">
    <PackageReference Include="Excalibur.Dispatch.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
    <PackageReference Include="Excalibur.Dispatch.LeaderElection.Abstractions" VersionOverride="$(DispatchPackageVersion)" />
    <PackageReference Include="Excalibur.Dispatch.Serialization.MemoryPack" VersionOverride="$(DispatchPackageVersion)" />
  </ItemGroup>
</Project>
