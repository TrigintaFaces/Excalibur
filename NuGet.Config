<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- Local feed for CI validation -->
    <add key="local-feed" value="./artifacts/_packages" />
    <!-- NuGet.org for external packages -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <packageSourceMapping>
    <!-- Use local feed for Dispatch packages when available -->
    <packageSource key="local-feed">
      <package pattern="Excalibur*" />
    </packageSource>
    <!-- Everything else from NuGet.org -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>

  <config>
    <add key="globalPackagesFolder" value=".nuget\packages" />
    <!-- Suppress NU1608 warnings during restore -->
    <add key="warningsAsErrors" value="false" />
    <add key="warningsNotAsErrors" value="NU1608" />
    <add key="noWarn" value="NU1608" />
  </config>
</configuration>
